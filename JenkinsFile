pipeline {
  agent any
  triggers {
    pollSCM('H/5 * * * *')  
  }
  stages {
    stage('Build') {
      steps { echo 'Build step.' }
    }
    stage('Unit & Integration Tests') {
      steps { echo 'Run tests.' }
    }
    stage('Code Analysis') {
      steps { echo 'Check code quality with new changes.' }
    }
    stage('Security Scan') {
      steps { echo 'Scan for vulnerabilities.' }
    }
    stage('Deploy to Staging') {
      steps { echo 'Deploy to staging server with new changes.' }
    }
    stage('Integration Tests on Staging') {
      steps { echo 'Run E2E tests with new change.' }
    }
    stage('Deploy to Production') {
      steps { echo 'Deploy to production server with new change.' }
    }
  }
}
